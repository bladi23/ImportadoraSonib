@model ImportadoraSonib.Domain.Entities.Product
@{
    ViewData["Title"] = "Eliminar producto";
}
<h2>Eliminar producto</h2>

<form asp-action="Delete" method="post">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.RowVersion) <!-- NECESARIO para concurrencia -->
    <p>¿Seguro que deseas eliminar (soft delete) el producto <strong>@Model.Name</strong>?</p>
    <button class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
