@model IEnumerable<ImportadoraSonib.Domain.Entities.Product>
<h2>Catálogo</h2>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <img class="card-img-top" src="@p.ImageUrl" alt="">
                <div class="card-body">
                    <h5>@p.Name</h5>
                    <p>USD @p.Price</p>
                    <a class="btn btn-sm btn-primary" asp-action="Detail" asp-route-slug="@p.Slug">Ver</a>
                    <a class="btn btn-sm btn-success"
                       href="https://wa.me/5939XXXXXXXX?text=@Uri.EscapeDataString($"Hola, quiero comprar: {p.Name} (ID {p.Id}) a USD {p.Price}")"
                       target="_blank" rel="noopener">Comprar WhatsApp</a>
                </div>
            </div>
        </div>
    }
</div>
@using ImportadoraSonib.Services

@foreach (var p in Model)
{
    <div class="card p-3">
        <h5>@p.Name</h5>
        <p>USD @p.Price</p>
        <a class="btn btn-success"
           href="@WhatsappLinkService.BuildLink(p.Name, p.Id, p.Price)"
           target="_blank" rel="noopener">
            Comprar WhatsApp
        </a>
    </div>
}

